<header class="sticky top-0 z-50 bg-white border-b border-black/5">
  <div class=" max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between">
    <div
      x-data="{ open: false }"
      class="relative flex w-full py-5 mx-auto bg-white lg:items-center lg:flex-row"
    >
      <div class="flex flex-row items-center justify-between flex-shrink-0">
        <a href="/" class="text-black inline-flex items-center gap-3">
          <img width="30" src="/logomi.svg" alt="logo" />
          <img width="125" src="/miagent.svg" alt="logo" />
        </a>
        <button
          @click="open = !open"
          :aria-expanded="open.toString()"
          aria-controls="main-navigation"
          aria-label="Toggle navigation menu"
          class="inline-flex items-center justify-center p-2 text-gray-400 hover:text-black focus:outline-none focus:text-black lg:hidden"
        >
          <svg
            :class="{'rotate-90': open}"
            class="w-6 h-6 transition-transform duration-300 ease-in-out"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path x-show="!open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            <path x-show="open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>

      <div
        :class="{'flex': open, 'hidden': !open}"
        class="flex-col w-full hidden lg:flex lg:flex-row lg:items-center"
      >
        <nav class="flex-col items-center gap-4 lg:gap-8 lg:pb-0 flex lg:flex-row lg:mx-auto">
          <a class="text-sm text-black transition duration-300 hover:text-blue-600 bg-green-100  rounded-full px-3 py-1" href="/#features">
            Về Miagent
          </a>
          <a href="/banggia" class="text-sm text-black transition duration-300 hover:text-blue-600 relative">
            Bảng Giá
            <span class="bg-red-500 ms-1 text-white text-[10px] px-2 py-1 rounded-full">NEW</span>
          </a>
          <a href="/" class="text-sm text-black transition duration-300 hover:text-blue-600 relative">
            Liên Hệ
            <sup class="ml-1 inline-block mt-1 w-1.5 h-1.5 bg-green-500 rounded-full"></sup>
          </a>
          <a href="/faq" class="text-sm text-black transition duration-300 hover:text-blue-600 relative">
            Blog
          </a>
          
        </nav>

        <div class="inline-flex items-center gap-2 list-none">
          <a
            href="https://app.miagent.io/install"
            target="_blank"
            class="flex items-center justify-center transition-all duration-200 focus:ring-2 focus:outline-none
             text-white bg-green-500 rounded-full px-3 py-1 hover:text-white ring-1 ring-gray-200 focus:ring-blue-500 h-8  text-xs font-medium  hover:bg-blue-500"
          >
            Đăng Ký
          </a>
          <a
            href="https://app.miagent.io/signin"
            target="_blank"
            class="flex items-center justify-center transition-all duration-200 ring-1 focus:ring-2 ring-gray-100 focus:outline-none text-white bg-black hover:bg-blue-500 focus:ring-gray-500/50 h-8  text-xs font-medium rounded-full px-3 py-1"
          >
            Đăng Nhập
          </a>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const languageToggleButton = document.querySelector('.language-toggle') as HTMLElement;
      const languageOptions = document.querySelector('.language-options') as HTMLElement;
      const languageLinks = document.querySelectorAll('.language-options li a');
      if (languageToggleButton && languageOptions) {
        languageToggleButton.addEventListener('click', function(event) {
          event.stopPropagation();
          languageOptions.style.display = languageOptions.style.display === 'block' ? 'none' : 'block';
        });
        window.addEventListener('click', function() {
          languageOptions.style.display = 'none';
        });
        languageLinks.forEach(link => {
          link.addEventListener('click', function() {
            languageOptions.style.display = 'none';
          });
        });
      }
    });
  </script>
  <style>
    .language-selector { position: relative; display: inline-block; }
    .language-toggle { padding: 10px 15px; background-color: transparent; color: black; cursor: pointer; border: none; }
    .language-options { display: none; position: absolute; background-color: #ffffff; min-width: 160px; border: 1px solid #ddd; z-index: 10; list-style: none; padding: 0; margin-top: 5px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); }
    .language-options li a { text-decoration: none; color: black; display: block; padding: 8px 12px; }
    .language-options li:hover { background-color: #f1f1f1; }
  </style>
</header>